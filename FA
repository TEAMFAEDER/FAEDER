#!/usr/bin/env bash
cd $(cd $(dirname $0); pwd)

if [ ! -f "./FA.txt" ]; then
lua ./FAEDER.lua
exit;
else
Token=`cat ./FA.txt`
BotId=`echo $Token | cut -f1 -d":"`
BotUser=$(redis-cli get ${BotId}:BotUser:)
if [[ $BotUser == "" ]]; then
rm -fr ./FA.txt
lua ./FAEDER.lua
exit;
fi
fi

chmod +x ./tg

if [ "$1" == "F" ]; then
while(true) do
sudo rm -fr ~/.telegram-cli
./tg -s ./FAEDER.lua $@ --bot=$Token
done
else
if ! screen -list | grep -q "$BotUser"; then
screen -S $BotUser ./FA F
else
screen -X -S $BotUser quit
screen -S $BotUser ./FA F
fi
fi
